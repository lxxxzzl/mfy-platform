		</dependency>
		<dependency> 
	       <groupId>org.aspectj</groupId >
	       <artifactId>aspectjweaver</artifactId >
	       <version>${org.aspectj-version}</version >
	   </dependency>
	   <dependency>
		  <groupId>cglib</groupId>
		  <artifactId>cglib-nodep</artifactId>
		  <version>2.2</version>
	   </dependency>
	   <!-- AspectJ end-->
	    
       <!-- LOG begin -->
       <dependency>
            <groupId>org.slf4j</groupId>
